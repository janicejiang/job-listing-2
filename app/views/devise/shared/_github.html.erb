<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn btn-lg btn-default" do %>
      <i class="fa fa-github fa-lg" aria-hidden="true"></i> <%= "Sign in with #{OmniAuth::Utils.camelize(provider)}" %>
    <% end %>
    <br />
  <% end -%>
<% end -%>
